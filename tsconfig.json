{
  "compilerOptions": {
    "rootDir": "./src",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "incremental": true,
    "target": "ES6",          // ES6 is a valid target, but ESNext or ES2020 can also be used
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "noEmitOnError": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
}
